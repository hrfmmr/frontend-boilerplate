{
  "scripts": {
    "build": "yarn run build:js",
    "build:js": "webpack",
    "build:js:production": "NODE_ENV=production webpack --config webpack.production.config.babel.js",
    "flow": "flow",
    "lint": "eslint src",
    "start": "browser-sync start --server '.' --port 9191 --files 'static' --no-open",
    "test": "ava -v",
    "test:nyan": "ava --tap | tap-nyan",
    "test:watch": "yarn run test -- --watch",
    "watch": "yarn run watch:js",
    "watch:js": "yarn run build:js -- -w"
  },
  "devDependencies": {
    "ava": "^0.18.2",
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-module-resolver": "^2.5.0",
    "babel-plugin-transform-async-to-generator": "^6.22.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-register": "^6.23.0",
    "browser-sync": "^2.18.7",
    "enzyme": "^2.7.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-import-resolver-babel-module": "^3.0.0",
    "eslint-plugin-flowtype": "^2.34.0",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "extract-text-webpack-plugin": "2.1.2",
    "flow-bin": "^0.39.0",
    "jsdom": "^9.11.0",
    "jsdom-global": "^2.1.1",
    "sinon": "^1.17.7",
    "tap-nyan": "^1.1.0",
    "webpack": "^2.2.1",
    "webpack-merge": "^2.6.1"
  },
  "ava": {
    "require": [
      "babel-register",
      "babel-polyfill"
    ],
    "babel": "inherit"
  }
}
