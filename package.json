{
  "scripts": {
    "build": "yarn run build:css & yarn run build:js",
    "build:css": "postcss --config .postcssrc.json",
    "build:js": "webpack",
    "build:js:production": "NODE_ENV=production webpack --config webpack.production.config.babel.js",
    "flow": "flow",
    "lint": "eslint src",
    "serve": "browser-sync start --server 'app' --port 4444 --files 'app' --no-open",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "test": "ava -v",
    "test:nyan": "ava --tap | tap-nyan",
    "test:watch": "yarn run test -- --watch",
    "watch": "yarn run watch:css & yarn run watch:js & yarn run serve",
    "watch:css": "yarn run build:css -- --watch --map",
    "watch:js": "yarn run build:js -- -w"
  },
  "devDependencies": {
    "@kadira/storybook": "^2.35.3",
    "autoprefixer": "^6.7.2",
    "ava": "^0.18.2",
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-module-resolver": "^2.5.0",
    "babel-plugin-transform-async-to-generator": "^6.22.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-react-jsx": "^6.22.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-register": "^6.23.0",
    "browser-sync": "^2.18.7",
    "cssnano": "^3.10.0",
    "enzyme": "^2.7.1",
    "eslint": "^3.15.0",
    "eslint-import-resolver-babel-module": "^3.0.0",
    "eslint-plugin-flowtype": "^2.30.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2 || ^4.0.0",
    "eslint-plugin-react": "^6.9.0",
    "flow-bin": "^0.39.0",
    "jsdom": "^9.11.0",
    "jsdom-global": "^2.1.1",
    "postcss-cli": "^2.6.0",
    "postcss-custom-properties": "^5.0.2",
    "postcss-import": "^9.1.0",
    "postcss-nested": "^1.0.0",
    "react-addons-test-utils": "^15.4.2",
    "react-redux": "^5.0.2",
    "redux": "^3.6.0",
    "redux-mock-store": "^1.2.2",
    "sinon": "^1.17.7",
    "tap-nyan": "^1.1.0",
    "webpack": "^2.2.1",
    "webpack-merge": "^2.6.1"
  },
  "dependencies": {
    "react": "^15.4.2",
    "react-dom": "^15.4.2"
  },
  "ava": {
    "require": [
      "babel-register",
      "babel-polyfill"
    ],
    "babel": "inherit"
  }
}
